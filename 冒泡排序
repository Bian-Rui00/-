/**
 * 冒泡排序
 */
public class BubbleSort {
    public static void main(String[] args) {
        int[] arr={50,80,100,90,70,20,10};
        for (int i=0;i<arr.length;i++){
            for (int j=0;j<arr.length-1;j++){
            //比较，前一个数大于后一个数则交换
                if (arr[j]>arr[j+1]){
                    int temp=arr[j];
                    arr[j]=arr[j+1];
                    arr[j+1]=temp;
                }
            }
            System.out.println(Arrays.toString(arr));
        }
    }
}
